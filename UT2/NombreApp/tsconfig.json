{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "esModuleInterop": true,   
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "react",
      "react-native"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/react-native/types/**/*.d.ts"
  ]
}
